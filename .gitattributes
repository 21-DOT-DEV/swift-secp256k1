# Auto-detect text files and normalize line endings
* text=auto

# Swift files
*.swift text diff=swift

# C files (upstream library code)
*.c text diff=c
*.h text diff=c

# Upstream C library in Sources should be marked as vendored
Sources/libsecp256k1/src/**         linguist-vendored
Sources/libsecp256k1/include/**     linguist-vendored
Sources/libsecp256k1_zkp/src/**     linguist-vendored
Sources/libsecp256k1_zkp/include/** linguist-vendored

# Custom utility files (not vendored)
Sources/libsecp256k1/src/Utility.c          linguist-vendored=false
Sources/libsecp256k1/include/Utility.h      linguist-vendored=false
Sources/libsecp256k1_zkp/src/Utility.c      linguist-vendored=false
Sources/libsecp256k1_zkp/include/Utility.h  linguist-vendored=false

